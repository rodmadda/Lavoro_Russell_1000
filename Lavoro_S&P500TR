chart.Correlation(ratio[,7:11])
# Correlazione dei fondi con il benchmark (GRAFICO DA MIGLIORARE)
chart.RollingCorrelation(ratio[,7:10],ratio[,11],
                         main = "Correlazione dei fondi con il benchmark",
                         legend.loc = "bottomleft")


